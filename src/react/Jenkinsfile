// NodeJS plugin https://plugins.jenkins.io/nodejs/   configurar en tools

pipeline {
    agent any
    tools {
        nodejs 'node22.9.0' // Name of the NodeJS installation
    }
    stages {
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
    }
}
