pipeline {
    agent any
    environment {
        _IMAGE = 'frontend-uniformes-service'
        _LOCATION = 'us-east4'
        _DESTINATION_PROJECT_ID = 'sit-cicd-images-apps'
        _IMAGE_PATH = 'us-east4-docker.pkg.dev/${_DESTINATION_PROJECT_ID}/${_REPOSITORY}/${_IMAGE}'
        _PIPELINE_NAME = 'frontend-uniformes-service-pipeline'
    }
    stages {
        stage ('Test') {
            steps {
                dir('src/react') {
                    echo 'hola mundo'
                    sh 'docker -v'
                    echo '${_IMAGE_PATH}'
                }
            }
        }
    }
}
